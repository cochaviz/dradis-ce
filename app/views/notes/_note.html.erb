<%
  item_css = ['list-item']
  item_css << ' active' if (request.format.html? and @note == note)
%>

<%= content_tag :div, id: "#{dom_id(note)}_link", class: item_css.join do %>

  <%= link_to project_node_note_path(@node.project, @node, note) do %>
    <i class="fa-solid fa-file-text list-item-icon"></i>
    <%= note.title %>
  <% end %>

  <div class="list-item-actions">
    <%= link_to edit_project_node_note_path(@node.project, @node, note), class:'btn btn-sm btn-warning list-item-action-edit me-1' do %>
      <i class="fa-solid fa-pencil"></i><span class="fa-sr-only">Edit</span>
    <% end %>

    <%= link_to [@node.project, @node, note],
          method: :delete,
          data: { confirm: "Are you sure?\n\nProceeding will delete this note from the associated node." },
          class: 'btn btn-sm btn-danger list-item-action-delete' do %>
      <i class="fa-solid fa-trash"></i><span class="fa-sr-only">Delete</span>
    <% end %>
  </div>

<% end %>
